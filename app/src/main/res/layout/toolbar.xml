<?xml version="1.0" encoding="utf-8"?>
<!--主要用来实现标题折叠功能-->
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/SuperTheme.AppBarOverlay.Dark"
    android:elevation="0dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:collapseIcon="@drawable/logo"
        app:popupTheme="@style/SuperTheme.PopupOverlay">
        <ImageView
            android:layout_width="@dimen/d120"
            android:layout_height="@dimen/d120"
            android:layout_gravity="left|top"
            android:src="@drawable/logo_fo"
            >

        </ImageView>


    </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>