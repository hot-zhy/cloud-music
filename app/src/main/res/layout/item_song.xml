<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/d10"
    android:layout_marginVertical="5dp"
    android:padding="@dimen/padding_outer">

<!--    封面-->
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/d70"
        android:layout_height="@dimen/d70"
        android:scaleType="centerCrop"
        android:id="@+id/icon"
        android:src="@drawable/placeholder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundCornerImageStyle"/>
<!--    标题-->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text_large"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginRight="@dimen/padding_meddle"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈哈哈skenfkl哈哈"
        app:layout_constraintRight_toLeftOf="@+id/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/info"
        />
<!--    歌手信息-->
    <TextView
        android:id="@+id/info"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="啊哈哈哈jajajjaajajjajesjfiose哈哈哈"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toLeftOf="@id/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginRight="@dimen/padding_meddle"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>