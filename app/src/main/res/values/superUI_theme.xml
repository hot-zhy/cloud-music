<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- toolbar深色 -->
    <style name="SuperTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="SuperTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- toolbar浅色 -->
    <style name="SuperTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="SuperTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <!--    界面样式-->
    <style name="SuperUI.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        主色调-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        次色调-->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/white</item>
<!--        状态栏的颜色-->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/primary</item>
    </style>

    圆角
    <style name="RoundCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_meddle</item>
    </style>
<!--    //设置容器-->
    <style name="SuperSettingContainer">
        <item name="android:layout_marginTop">@dimen/d0_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/d16</item>
        <item name="android:paddingRight">@dimen/d16</item>
        <item name="android:paddingTop">@dimen/d15</item>
        <item name="android:paddingBottom">@dimen/d15</item>
        <item name="background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SuperSettingValueSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/super_light_grey</item>
        <item name="android:textSize">@dimen/super_text_small</item>
    </style>

<!--通用输入框-->
<!--    多行输入框，只有底部有边框-->
    <style name="EditText">
        <item name="android:drawablePadding">@dimen/padding_meddle</item>
        <item name="android:paddingStart">@dimen/padding_meddle</item>
        <item name="android:paddingRight">@dimen/padding_meddle</item>
        <item name="android:paddingTop">@dimen/d13</item>
        <item name="android:paddingBottom">@dimen/d13</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:background">@color/white</item>
    </style>

<!--    单行输入框-->
    <style name="EditText.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">@dimen/d50</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/padding_meddle</item>
    </style>

<!--    有边框的单行输入框-->
    <style name="EditText.SingleLine.Border">
        <item name="android:layout_marginTop">@dimen/padding_large</item>
        <item name="android:background">@drawable/selector_edit_text</item>
    </style>



</resources>